<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
  android:gravity="bottom"
   >
    <TextView
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/appcolor_green"/>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="0.8"
        >
   <ImageView
       android:id="@+id/iv_activity_footer_home"
       android:layout_width="0dp"
       android:layout_weight="0.2"
       android:layout_height="wrap_content"
       android:src="@mipmap/ic_launcher"/>
    <ImageView
        android:id="@+id/iv_activity_footer_subscribe"
        android:layout_width="0dp"
        android:layout_weight="0.2"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_launcher"/>
    <ImageView
        android:id="@+id/iv_activity_footer_profile"
        android:layout_width="0dp"
        android:layout_weight="0.2"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_launcher"/>
    <ImageView
        android:id="@+id/iv_activity_footer_unsubscribe"
        android:layout_width="0dp"
        android:layout_weight="0.2"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_launcher"/>
</LinearLayout>
</LinearLayout>